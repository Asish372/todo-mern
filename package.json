{
  "name": "mern-todo-app",
  "version": "1.0.0",
  "description": "MERN Todo Application",
  "scripts": {
    "start": "cd mern-todo-backend && npm start",
    "build": "cd mern-todo-frontend && npm run build",
    "install-backend": "cd mern-todo-backend && npm install",
    "install-frontend": "cd mern-todo-frontend && npm install",
    "postinstall": "npm run install-backend && npm run install-frontend"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}